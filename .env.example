# =============================================================================
# INSPACEMAP TENANT PORTAL - ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values
# =============================================================================

# -----------------------------------------------------------------------------
# APPLICATION CONFIGURATION
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_NAME="Inspacemap Tenant Portal"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# -----------------------------------------------------------------------------
# API CONFIGURATION
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_BASE_URL="http://localhost:8000/api/v1"
NEXT_PUBLIC_GRAPHQL_URL="http://localhost:8000/graphql"
NEXT_PUBLIC_API_TIMEOUT="30000"

# -----------------------------------------------------------------------------
# AUTHENTICATION
# -----------------------------------------------------------------------------
NEXTAUTH_SECRET="your-nextauth-secret-key-here-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# OAuth Providers (optional)
NEXT_PUBLIC_GOOGLE_CLIENT_ID="your-google-client-id"
NEXT_PUBLIC_GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Auth0 (optional)
NEXT_PUBLIC_AUTH0_DOMAIN="your-auth0-domain"
NEXT_PUBLIC_AUTH0_CLIENT_ID="your-auth0-client-id"
NEXT_PUBLIC_AUTH0_CLIENT_SECRET="your-auth0-client-secret"
NEXT_PUBLIC_AUTH0_AUDIENCE="your-auth0-audience"

# -----------------------------------------------------------------------------
# EXTERNAL SERVICES
# -----------------------------------------------------------------------------
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN="your-mapbox-token"

# Analytics (optional)
VERCEL_ANALYTICS_ID="your-vercel-analytics-id"
GOOGLE_ANALYTICS_ID="GA-MEASUREMENT-ID"

# Error Monitoring (optional)
NEXT_PUBLIC_SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_ENVIRONMENT="development"

# -----------------------------------------------------------------------------
# FILE UPLOAD LIMITS
# -----------------------------------------------------------------------------
NEXT_PUBLIC_MAX_FILE_SIZE="10485760"
NEXT_PUBLIC_MAX_VIDEO_SIZE="104857600"
NEXT_PUBLIC_ALLOWED_IMAGE_TYPES="image/jpeg,image/png,image/webp"
NEXT_PUBLIC_ALLOWED_VIDEO_TYPES="video/mp4,video/mov,video/avi"
NEXT_PUBLIC_ALLOWED_DOCUMENT_TYPES="application/pdf"

# -----------------------------------------------------------------------------
# GRAPH EDITOR SETTINGS
# -----------------------------------------------------------------------------
NEXT_PUBLIC_THREE_JS_ANTIALIAS="true"
NEXT_PUBLIC_THREE_JS_SHADOWS="true"
NEXT_PUBLIC_THREE_JS_PIXEL_RATIO="2"
NEXT_PUBLIC_GRAPH_LAYOUT_ITERATIONS="100"
NEXT_PUBLIC_GRAPH_LAYOUT_FORCE_STRENGTH="0.1"
NEXT_PUBLIC_GRAPH_LAYOUT_LINK_DISTANCE="2"
NEXT_PUBLIC_PATHFINDING_ALGORITHM="astar"
NEXT_PUBLIC_PATHFINDING_MAX_DISTANCE="100"

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
NEXT_PUBLIC_FEATURE_GRAPH_EDITOR="true"
NEXT_PUBLIC_FEATURE_PANORAMA_PREVIEW="true"
NEXT_PUBLIC_FEATURE_COLLABORATION="false"
NEXT_PUBLIC_FEATURE_ANALYTICS="true"
NEXT_PUBLIC_FEATURE_AUDIT_LOGS="true"
NEXT_PUBLIC_FEATURE_DARK_MODE="true"

# -----------------------------------------------------------------------------
# MULTI-TENANT SETTINGS
# -----------------------------------------------------------------------------
NEXT_PUBLIC_DEFAULT_TENANT_ID="tenant-001"
NEXT_PUBLIC_MAX_ORGANIZATIONS_PER_USER="5"
NEXT_PUBLIC_MAX_VENUES_PER_ORGANIZATION="10"
NEXT_PUBLIC_MAX_FLOORS_PER_VENUE="20"

# -----------------------------------------------------------------------------
# UI/UX SETTINGS
# -----------------------------------------------------------------------------
NEXT_PUBLIC_DEFAULT_THEME="light"
NEXT_PUBLIC_ENABLE_ANIMATIONS="true"
NEXT_PUBLIC_REDUCE_MOTION="false"
NEXT_PUBLIC_DEFAULT_PAGE_SIZE="20"
NEXT_PUBLIC_MAX_PAGE_SIZE="100"

# -----------------------------------------------------------------------------
# DEVELOPMENT
# -----------------------------------------------------------------------------
NEXT_PUBLIC_DEBUG="true"
NEXT_PUBLIC_LOG_LEVEL="debug"
FAST_REFRESH="true"